# Smart Edu Backend Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
APP_PORT=1000
APP_NAME=Smart Edu Hub

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Production database connection
DATABASE_URL=postgresql://username:password@host:5432/database_name
DATABASE_URL_PRODUCTION=postgresql://username:password@host:5432/database_name

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=smart_edu_user
POSTGRES_PASSWORD=your-super-secure-password-here
POSTGRES_DB=smart_edu_prod

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Production SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smart-edu-prod-bucket

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-name
CLOUDINARY_API_KEY=your-production-cloudinary-key
CLOUDINARY_API_SECRET=your-production-cloudinary-secret

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
OPENAI_API_KEY=your-production-openai-api-key

# ===========================================
# PINECONE CONFIGURATION
# ===========================================
PINECONE_API_KEY=your-production-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session configuration
SESSION_SECRET=your-super-secure-session-secret-key

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info

# Sentry DSN for error tracking (recommended for production)
SENTRY_DSN=your-sentry-dsn-here

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Payment Gateway (if applicable)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Push Notifications (if applicable)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
